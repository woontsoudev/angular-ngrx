{
  "files.autoSave": "onFocusChange",
  "files.autoSaveDelay": 2000,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.js.map": {
      "when": "$(basename)"
    }
  },
  "files.hotExit": "onExit",
  "files.defaultLanguage": "typescript",
  "files.trimTrailingWhitespace": true,
  "prettier.tslintIntegration": true,
  "editor.formatOnSave": true
}
